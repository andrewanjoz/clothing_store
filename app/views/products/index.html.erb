<div class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold mb-8 text-gray-800">Our Clothing Items</h2>
  
  <%= link_to 'Add New Product', new_product_path, 
      class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg mb-6 hover:bg-blue-700 transition duration-200 ease-in-out" %>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden transform hover:scale-102 transition duration-200 ease-in-out hover:shadow-xl">
        <div class="aspect-w-3 aspect-h-4">
          <% if product.image.attached? %>
            <%= image_tag product.image, class: "w-full h-full object-cover" %>
          <% else %>
            <img src="https://via.placeholder.com/300x400" class="w-full h-full object-cover" alt="Placeholder">
          <% end %>
        </div>
        <div class="p-5">
          <h3 class="font-bold text-xl mb-3 text-gray-800"><%= product.name %></h3>
          <p class="text-gray-600 text-lg font-semibold mb-4"><%= number_to_currency(product.price) %></p>
          <div class="flex space-x-3">
            <%= link_to "View Details", product_path(product), 
                class: "flex-1 bg-indigo-600 text-white px-4 py-2 rounded-lg text-center hover:bg-indigo-700 transition duration-200 ease-in-out" %>
            <%= button_to "Add to Cart", add_item_cart_path(product), 
                method: :post, 
                class: "flex-1 bg-green-600 text-white px-4 py-2 rounded-lg text-center hover:bg-green-700 transition duration-200 ease-in-out" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
